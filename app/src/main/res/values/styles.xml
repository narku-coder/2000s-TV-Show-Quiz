<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryDark">@color/teal_200</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
        <item name="android:textColor">#fdf405</item>
    </style>

    <style name="MyTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="MyTextStyle.Heading">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTextStyle.Subheading">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">30dp</item>
    </style>

    <style name="MyButtonStyle.Disney">
        <item name="android:textColor">#fdf405</item>
        <item name="android:background">@drawable/disney_button</item>
        <item name="android:layout_marginTop">75dp</item>
    </style>

    <style name="MyButtonStyle.Discovery">
        <item name="android:textColor">#fcd405</item>
        <item name="android:background">@drawable/discovery_button</item>
        <item name="android:layout_marginTop">150dp</item>
    </style>

    <style name="MyButtonStyle.Nick">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/nick_button</item>
        <item name="android:layout_marginTop">150dp</item>
    </style>

    <style name="MyButtonStyle.Cartoon">
        <item name="android:textColor">#E6E6E6</item>
        <item name="android:background">@drawable/cartoon_button</item>
        <item name="android:layout_marginTop">75dp</item>
    </style>

    <style name="MyButtonStyle.Mute">
        <item name="android:textColor">#0A5AEA</item>
        <item name="android:background">@drawable/mute_button</item>
        <item name="android:layout_marginTop">75dp</item>
    </style>
</resources>